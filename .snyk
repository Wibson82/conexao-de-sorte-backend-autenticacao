# Snyk (https://snyk.io) policy file
# Microserviço de Autenticação - Conexão de Sorte
version: v1.0.0

# Ignore specific vulnerabilities with justification
# Format: SNYK-JAVA-GROUPID-VULNID
ignore:
  # Example entries - uncomment and modify as needed:
  # SNYK-JAVA-ORGSPRINGFRAMEWORK-12345:
  #   - '*':
  #       reason: 'Test dependency only, not exposed in production'
  #       expires: '2024-12-31T23:59:59.999Z'
  #       created: '2024-01-15T10:00:00.000Z'
  
  # SNYK-JAVA-COMH2DATABASE-67890:
  #   - '*':
  #       reason: 'H2 database used only in test scope for unit testing'
  #       expires: '2024-12-31T23:59:59.999Z'
  #       created: '2024-01-15T10:00:00.000Z'

# Language settings
language-settings:
  java:
    # Exclude test dependencies from production scans
    exclude-test-dependencies: true
    # Maven specific settings
    maven:
      # Scan only production scopes
      scopes: ['compile', 'runtime']

# Project settings
project-name: 'autenticacao-service'
project-environment: 'production'
project-business-criticality: 'high'
project-lifecycle: 'production'
project-tags:
  - 'microservice'
  - 'authentication'
  - 'spring-boot'
  - 'webflux'
  - 'jwt'

# Patch settings
patch: {}

# Notes:
# - Always provide clear justification for ignored vulnerabilities
# - Set expiration dates for all ignores to force periodic review
# - Use specific vulnerability IDs, avoid wildcards when possible
# - Document the business context and risk assessment
# - Review this file quarterly or when new vulnerabilities are found