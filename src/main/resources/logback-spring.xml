<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Propriedades de configuração -->
    <springProfile name="!prod">
        <property name="LOG_LEVEL" value="DEBUG"/>
        <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>
    </springProfile>
    
    <springProfile name="prod">
        <property name="LOG_LEVEL" value="INFO"/>
        <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>
    </springProfile>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp/>
                <logLevel/>
                <loggerName/>
                <mdc/>
                <arguments/>
                <message/>
                <stackTrace/>
            </providers>
        </encoder>
    </appender>

    <!-- File Appender para logs gerais -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/conexao-de-sorte-auth.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/conexao-de-sorte-auth.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp/>
                <logLevel/>
                <loggerName/>
                <mdc/>
                <arguments/>
                <message/>
                <stackTrace/>
            </providers>
        </encoder>
    </appender>

    <!-- Appender específico para auditoria do Key Vault -->
    <appender name="KEYVAULT_AUDIT" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/keyvault-audit.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/keyvault-audit.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>50MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>90</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp/>
                <logLevel/>
                <loggerName/>
                <mdc/>
                <arguments/>
                <message/>
                <stackTrace/>
            </providers>
        </encoder>
    </appender>

    <!-- Appender para métricas e performance -->
    <appender name="METRICS" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/metrics.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/metrics.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>50MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp/>
                <logLevel/>
                <loggerName/>
                <mdc/>
                <arguments/>
                <message/>
                <stackTrace/>
            </providers>
        </encoder>
    </appender>

    <!-- Logger específico para auditoria do Key Vault -->
    <logger name="AUDIT.KEYVAULT" level="INFO" additivity="false">
        <appender-ref ref="KEYVAULT_AUDIT"/>
        <springProfile name="!prod">
            <appender-ref ref="CONSOLE"/>
        </springProfile>
    </logger>

    <!-- Logger para métricas -->
    <logger name="METRICS" level="INFO" additivity="false">
        <appender-ref ref="METRICS"/>
    </logger>

    <!-- Loggers específicos para componentes do Key Vault -->
    <logger name="br.tec.facilitaservicos.autenticacao.service.KeyVaultService" level="${LOG_LEVEL}"/>
    <logger name="br.tec.facilitaservicos.autenticacao.service.KeyVaultMonitoringService" level="${LOG_LEVEL}"/>
    <logger name="br.tec.facilitaservicos.autenticacao.controller.KeyVaultDiagnosticsController" level="${LOG_LEVEL}"/>
    <logger name="br.tec.facilitaservicos.autenticacao.config.AzureKeyVaultConfig" level="${LOG_LEVEL}"/>

    <!-- Reduzir verbosidade de bibliotecas externas -->
    <logger name="com.azure" level="WARN"/>
    <logger name="org.springframework.cloud.azure" level="WARN"/>
    <logger name="reactor.netty" level="WARN"/>
    <logger name="io.netty" level="WARN"/>
    <logger name="org.springframework.security" level="INFO"/>
    <logger name="org.springframework.web" level="INFO"/>
    <logger name="org.hibernate" level="WARN"/>
    <logger name="org.springframework.data" level="INFO"/>

    <!-- Logger raiz -->
    <root level="${LOG_LEVEL}">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

    <!-- Configurações específicas por perfil -->
    <springProfile name="dev">
        <!-- Em desenvolvimento, logs mais verbosos no console -->
        <logger name="br.tec.facilitaservicos.autenticacao" level="DEBUG"/>
    </springProfile>

    <springProfile name="test">
        <!-- Em testes, reduzir logs para melhor performance -->
        <root level="WARN">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <springProfile name="prod">
        <!-- Em produção, logs estruturados e otimizados -->
        <logger name="br.tec.facilitaservicos.autenticacao" level="INFO"/>
        
        <!-- Desabilitar console em produção para performance -->
        <root level="INFO">
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>
</configuration>