secrets:
  REDIS_PASSWORD:
    external: true
    name: REDIS_PASSWORD
  DATABASE_PASSWORD:
    external: true
    name: DATABASE_PASSWORD
  JWT_SECRET:
    external: true
    name: JWT_SECRET
  ENCRYPTION_MASTER_KEY:
    external: true
    name: ENCRYPTION_MASTER_KEY

# ============================================================================
# ğŸ“¦ VOLUMES EXTERNOS
# ============================================================================
volumes:
  autenticacao-logs:
    external: true
    name: autenticacao-logs

